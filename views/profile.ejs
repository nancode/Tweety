<!doctype html>
<html>
<head>
    <title>Tweeple</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>




      <div class="jumbotron text-center">
         
  
        <p>Login or Register to upload your Ads:</p>

        <a href="/login" class="btn btn-default"></span> Local Login</a>
        <a href="/signup" class="btn btn-default"></span> Local Signup</a>
         </div>
     </div>

    

 

       
        <!-- TWITTER INFORMATION -->
        
            <div class="jumbotron text-center">
                <h3 class="text-info"><span class="fa fa-twitter"></span>Your Twitter info</h3>

                <% if (user.twitter.token) { %>
                    <p>
                       
                        <strong>display name</strong>: <%= user.twitter.displayName %><br>
						

                        <strong>username</strong>: <%= user.twitter.username %>
                    </p>

                    <a href="/unlink/twitter" class="btn btn-info">Unlink</a>
                <% } else { %>
                    <a href="/connect/twitter" class="btn btn-info">Connect Twitter</a>
                <% } %>
               

            </div>
 
 
       



</body>
</html>
